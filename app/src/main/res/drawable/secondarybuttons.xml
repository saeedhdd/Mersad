<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#5e00ee" />
            <gradient android:angle="-90" android:startColor="#5e00ee" android:endColor="#5e00ee"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#5e00ee" />
            <solid android:color="#435e00ee"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#5e00ee" />
            <gradient android:angle="-90" android:startColor="#685e00ee" android:endColor="#685e00ee" />
        </shape>
    </item>
</selector>
